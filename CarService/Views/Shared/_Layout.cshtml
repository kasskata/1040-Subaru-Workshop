<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 1040 Subaru Автосервиз</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand" style="transform: translateY(-10%);">
                    <img src="~/Images/batman-logo.png" style="width: 70px; height: 40px;" title="Начало" alt="additional title" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav nav navbar-right">
                    <li>@Html.ActionLink("За нас", "About", "Home")</li>
                    <li>@Html.ActionLink("Запази час", "Calendar", "Home")</li>
                    <li><a href="#">Форум</a></li>
                    <li>@Html.ActionLink("Контакти", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="body-content">
            @RenderBody()
            <hr />
        </div>
        <footer class="footer">
            <button class="btn btn-circle btn-lg btn-info" id="facebook">
                <i class="fa fa-facebook fa-2x"></i>
            </button>
            <button class="btn btn-circle btn-warning btn-lg" id="github">
                <i class="fa fa-github fa-2x"></i>
            </button>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(".navbar-fixed-top").autoHidingNavbar({
        });
    </script>
</body>
</html>
